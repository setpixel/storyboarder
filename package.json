{
  "name": "storyboarder",
  "productName": "Storyboarder",
  "version": "0.2.0",
  "description": "The fastest way to storyboard.",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "dist:mac": "build -m",
    "dist:win": "build -w",
    "dist:linux": "build -l",
    "dist": "build -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wonderunit/storyboarder.git"
  },
  "keywords": [
    "fountain",
    "storyboard",
    "storyboarder"
  ],
  "author": "Wonder Unit Inc.",
  "license": "ISC",
  "build": {
    "asar": true,
    "appId": "com.wonderunit.storyboarder",
    "compression": "maximum",
    "files": [
      "**/*",
      "!*.md",
      "!DEVELOPERS.md",
      "!README.md",
      "!notes",
      "!test"
    ],
    "dmg": {
      "background": "build/background.png",
      "iconSize": 140,
      "contents": [
        {
          "x": 120,
          "y": 250
        },
        {
          "x": 420,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "1.6.7",
    "electron-builder": "17.0.2"
  },
  "dependencies": {
    "cardinal-spline-js": "^2.3.6",
    "color-js": "^1.0.4",
    "electron-is-dev": "0.1.2",
    "electron-localshortcut": "^1.0.0",
    "express": "^4.15.2",
    "moment": "^2.18.1",
    "socket.io": "^1.7.3",
    "tether": "1.4.0",
    "tether-tooltip": "1.2.0",
    "tone": "^0.10.0"
  }
}
